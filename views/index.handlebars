<div class="container">
    <img id="burger-picture" src="/public/img/Smash-Burger.jpg">
    <h2 id="header">Eat-Da-Burger</h2>
</div>

<div class="burger">
<h2>Burgers to Devour!</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
    <li>
	{{id}}{{burger_name}}<button class="devour-burger" data-id="{{id}}">Devour!!</button>
    </li>
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="burger">
<h2>Burgers Devoured!</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
        <li>
	      {{id}}{{burger_name}}
        </li>
    {{/if}}
  {{/each}}
</ul>
</div>

<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>
  <button type="submit">Add Burger</button>
</form>